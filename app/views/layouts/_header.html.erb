<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
      <%= image_tag("logo300.png", id: "logo_icon", alt: "Ruby logo", width: "30px") %>
      <%= link_to "Turquoise", root_path, id: "logo" %>

      <nav>
        <div class="navbar-header">
          <div class="dark_modeArea" id="makeImg">
            <input type="checkbox" id="dark_modecheck">
            <label for="dark_modecheck">
              <span></span>
            </label>
          </div>


          <button id="hamburger" type="button" class="navbar-toggle collapsed">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
      </div>
      
      <ul id="navbar-menu"
          class="nav navbar-nav navbar-right">
        <li><%= link_to t('links.home'), root_path %></li>
        <li><%= link_to t('links.new'), lately_path %></li>
        <li><%= link_to t('links.delete'), delete_path %></li>
        <li><%= link_to t('links.help'), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t('links.user'), users_path %></li>
          <li class="dropdown">
            <a href="#" id="account" class="dropdown-toggle">
              <%= t("links.account") %> <b class="caret"></b>
            </a>
            <ul id="dropdown-menu" class="dropdown-menu">
              <li><%= link_to t('links.profile'), current_user %></li>
              <li><%= link_to t('links.setting'), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t('links.log_out'), logout_path,
                                       data: { "turbo-method": :delete } %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t('links.log_in'), login_path %></li>
        <% end %>

        <li class="dropdown">
          <a href="#" id="language" class="dropdown-toggle">
            <%= t("links.language") %> <b class="caret"></b>
          </a>
          <ul id="dropdown-language" class="dropdown-menu">
            <li><%= link_to "English", url_for(locale: :en) %></li>
            <li><%= link_to "日本語", url_for(locale: :ja) %></li>
          </ul>
        </li>

      </ul>
    </nav>
  </div>
  
</header>
