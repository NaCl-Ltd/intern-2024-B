<%= form_with(model: @micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t('links.prof_text') %>
  </div>
  <%= f.submit t('links.post'), class: "btn btn-primary" %>
  <span class="image">
    <%= f.file_field :image, multiple: true , accept: "image/jpeg,image/gif,image/png", id: "fileInput", style: "display:none;" %>
    <label for="fileInput" class="custom-file-button">ファイルを選択</label>
  </span>
  <div id="image-preview"></div>
<% end %>
