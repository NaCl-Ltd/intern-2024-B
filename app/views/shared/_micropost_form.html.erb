<%= form_with(model: @micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "ここに文章を入力してください" %>
  </div>
  <%= f.submit "投稿", class: "btn btn-primary" %>
  <span class="image">
    <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png", id: "fileInput", style: "display:none;" %>
    <label for="fileInput" class="custom-file-button">ファイルを選択</label>
  </span>
<% end %>
