<% if @feed_items.any? %>
  <ol class="microposts">
    <%= render @pinned %>
    <%= render @not_pinned %>
  </ol>
  <% if controller_name == 'static_pages' && action_name == 'home' %>
    <%= will_paginate @feed_items, params: { controller: :static_pages, action: :home } %>
  <% elsif controller_name == 'static_pages' && action_name == 'lately' %>
  <% end %>
<% end %>
