<% provide(:title, 'All users') %>
<h1>
  <%= t('pages.all_users') %>
</h1>

<%= form_with url:users_path,local: true,method: :get do |f| %>
  <%= f.select :prefecture, options_for_select(Place.birthplaces.keys.map { |key| [key, key] }), {} %>
  <%= f.text_field :word,placeholder: "name or e-mail"%>
 <%= f.submit "検索", class: "btn btn-primary" %>
<% end %>


<%= will_paginate %>

<ul class="users">
  <% if @users.any? %>
    <%= render @users %>
  <% else %>
    <p>一致するユーザは存在しませんでした</p>
  <% end %>
</ul>
<%= will_paginate %>
