<li>
  <%= gravatar_for user, size: 50 %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_user?(user) %>
  <c> | </c>
  <%= link_to "delete", user, data: { "turbo-method": :delete,
                                          turbo_confirm: "You sure?" } %>
  <% end %>
  <br>
  <c id="following" class="stat">
    <%= user.following.count %>
  </c>
  <c>
    <%= t("users.following") %>
    &nbsp;|&nbsp;&nbsp;
  </c>
  <c id="followers" class="stat">
    <%= user.followers.count %>
  </c>
  <%= t("users.followers") %>
  <% if user.prefecture.present? && user.prefecture != "---" %>
    &nbsp;| &nbsp;<%= t('users.place of birth') %>ï¼š<%= user.prefecture %>
  <% end %>

  <% if user.bio.present? %>
    <p><%= user.bio %></p>
  <% end %>
</li>
